<Window x:Class="WPFoefening5.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFoefening5"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Orientation="Vertical">
            <Label Content="Index"/>
            <TextBox x:Name="txtIndex" Height="23" Width="100" HorizontalAlignment="Left"/>
            <Label Content="Voornaam"/>
            <TextBox x:Name="txtVoornaam" Height="23" Width="100" HorizontalAlignment="Left"/>
            <Label Content="Naam"/>
        <TextBox x:Name="txtNaam" Height="23" Width="100" HorizontalAlignment="Left"/>
            <Label Content="Bekijk"/>
            <TextBox x:Name="txtBekijk" Height="23" Width="100" HorizontalAlignment="Left"/>
            <Button x:Name="Bekijk" Width="100" Height="50" Content="Bekijk" Click="Bekijk_Click"/>
            <Button x:Name="Bewaar" Width="100" Height="50" Content="Bewaar" Click="Bewaar_Click"/>
        </StackPanel>
    </Grid>
</Window>
